// -*- mode: jsonc -*-
{
	"reload_style_on_change": true,
	"layer": "top", // Waybar at top layer
	"position": "top", // Waybar position (top|bottom|left|right)
	"height": 30, // Waybar height (to be removed for auto height)
	"spacing": 0,
	"modules-left": [
		"hyprland/workspaces"
	],
	"modules-center": [
		"clock"
	],
	"modules-right": [
		"tray",
		"cpu",
		"memory",
		"hyprland/language",
		"pulseaudio",
		"bluetooth",
		"network",
		"idle_inhibitor"
	],
	"custom/wireguard-manager": {
